---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getLatestRelease, getDownloadAssets } from "../utils/github";
import OGImage from "../assets/og.jpg";
import compressoLogo from "../assets/compresso.png";
import aboutImage from "../assets/about.jpg";
import privateImage from "../assets/private.jpg";
import featuresImage from "../assets/features.jpg";
import heroImage from "../assets/hero.jpg";

// Fetch latest release at build time
const latestRelease = await getLatestRelease();
const downloads = getDownloadAssets(latestRelease.tag_name);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={SITE_TITLE}
      description={SITE_DESCRIPTION}
      image={OGImage}
    />
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
          Cantarell, sans-serif;
        line-height: 1.6;
      }

      .gradient-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .hero {
        min-height: 100vh;
        max-width: 1920px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 120px 20px 80px;
        position: relative;
        overflow: hidden;
        margin: auto;
      }

      .hero::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        animation: pulse 15s ease-in-out infinite;
      }

      @keyframes pulse {
        0%,
        100% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.1);
        }
      }

      .hero-content {
        position: relative;
        z-index: 1;
        max-width: 1500px;
      }

      .compresso-logo {
        width: 100px;
        height: auto;
        display: block;
        margin: 0 auto;
        margin-bottom: 25px;
      }
      .compresso-logo:hover {
        transform: scale(0.8);
        transition: all 300ms ease-in-out;
      }

      .badge {
        display: inline-block;
        padding: 4px 10px;
        background: rgba(102, 126, 234, 0.2);
        border: 1px solid rgba(102, 126, 234, 0.3);
        border-radius: 50px;
        font-size: 12px;
        font-weight: 500;
        backdrop-filter: blur(10px);
      }

      .hero h1 {
        font-size: clamp(48px, 8vw, 80px);
        line-height: 1.1;
        margin-bottom: 24px;
        letter-spacing: -0.02em;
        font-weight: 700;
      }

      .hero p {
        font-size: clamp(14px, 2.5vw, 20px);
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 40px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
      }

      .cta-group {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 60px;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 12px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
      }

      .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        border: none;
      }

      .btn-primary:hover {
        transform: translateY(-2px);
        color: #fff;
      }

      .btn-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
      }

      .btn-secondary:hover {
        color: #fff;
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
      }

      .hero-image {
        margin-top: 60px;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .hero-image img {
        width: 100%;
        height: auto;
        display: block;
      }

      .section {
        padding: 80px 20px;
        position: relative;
      }

      .section-divider {
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.1),
          transparent
        );
        margin: 0;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
      }

      .section-header {
        text-align: center;
        margin-bottom: 80px;
      }

      .section-tag {
        display: inline-block;
        padding: 6px 16px;
        background: rgba(102, 126, 234, 0.15);
        border-radius: 20px;
        font-size: 13px;
        font-weight: 500;
        color: #667eea;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .section-title {
        font-size: clamp(36px, 5vw, 56px);
        font-weight: 800;
        margin-bottom: 20px;
        line-height: 1.2;
      }

      .section-subtitle {
        font-size: clamp(16px, 2vw, 20px);
        color: rgba(255, 255, 255, 0.6);
        max-width: 700px;
        margin: 0 auto;
      }

      .feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 40px;
        margin-top: 80px;
      }

      .feature-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 40px;
        transition: all 0.3s ease;
      }

      .feature-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(102, 126, 234, 0.3);
        transform: translateY(-4px);
      }

      .feature-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(
          135deg,
          rgba(102, 126, 234, 0.2),
          rgba(118, 75, 162, 0.2)
        );
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-bottom: 24px;
      }

      .feature-card h3 {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 12px;
      }

      .feature-card p {
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.7;
        font-size: 16px;
      }

      .showcase-section {
        background: linear-gradient(
          180deg,
          transparent,
          rgba(102, 126, 234, 0.05),
          transparent
        );
      }

      .showcase-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
      }

      .showcase-text h2 {
        font-size: clamp(32px, 4vw, 48px);
        font-weight: 800;
        margin-bottom: 24px;
        line-height: 1.2;
      }

      .showcase-text p {
        font-size: 18px;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 32px;
        line-height: 1.7;
      }

      .feature-list {
        list-style: none;
      }

      .feature-list li {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        padding: 16px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        font-size: 17px;
        color: rgba(255, 255, 255, 0.8);
      }

      .feature-list li:last-child {
        border-bottom: none;
      }

      .feature-list li::before {
        content: "‚úì";
        flex-shrink: 0;
        width: 24px;
        height: 24px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-weight: bold;
      }

      .feature-list-vertical li {
        align-items: flex-start;
      }

      .feature-list-vertical li::before {
        align-self: flex-start;
        margin-top: 2px;
      }

      .feature-item-content {
        display: flex;
        flex-direction: column;
        gap: 4px;
      }

      .feature-list-vertical li strong {
        font-size: 16px;
        color: #fff;
        font-weight: 600;
      }

      .feature-list-vertical li span {
        font-size: 15px;
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.5;
      }

      .feature-list li.feature-hidden {
        display: none !important;
      }

      .show-all-btn {
        margin-top: 16px;
        padding: 4px 10px;
        background: transparent;
        border: 1px solid rgba(102, 126, 234, 0.5);
        border-radius: 8px;
        color: #667eea;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .show-all-btn:hover {
        background: rgba(102, 126, 234, 0.1);
        border-color: #667eea;
      }

      .showcase-visual {
        position: relative;
      }

      .showcase-visual video,
      .showcase-visual img {
        width: 100%;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 40px;
        margin-top: 80px;
      }

      .stat-card {
        text-align: center;
        padding: 40px 20px;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.05);
      }

      .stat-number {
        font-size: 48px;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
      }

      .stat-label {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .cta-section {
        text-align: center;
        background: linear-gradient(
          180deg,
          rgba(102, 126, 234, 0.1),
          transparent
        );
      }

      .cta-section h2 {
        font-size: clamp(36px, 5vw, 56px);
        font-weight: 800;
        margin-bottom: 20px;
      }

      .cta-section p {
        font-size: 20px;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 40px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      .github-link {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 8px 12px;
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
      }

      .github-link:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.4);
        transform: translateY(-2px);
      }

      .downloads-section {
        margin-top: 60px;
        text-align: center;
        scroll-margin-top: 80px;
      }

      .downloads-section h3 {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 32px;
        color: rgba(255, 255, 255, 0.9);
      }

      .downloads-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        max-width: 900px;
        margin: 0 auto;
      }

      .download-column {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .download-os-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 16px;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .download-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 14px 20px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 12px;
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.3s ease;
      }

      .download-btn:hover {
        background: rgba(102, 126, 234, 0.2);
        border-color: rgba(102, 126, 234, 0.5);
        transform: translateY(-2px);
      }

      .download-btn svg {
        flex-shrink: 0;
      }

      .arch-badge {
        font-size: 11px;
        padding: 2px 6px;
        background: rgba(102, 126, 234, 0.2);
        border-radius: 4px;
        margin-left: 6px;
      }

      .version-badge {
        display: inline-block;
        margin-top: 24px;
        padding: 6px 14px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        font-size: 13px;
        color: rgba(255, 255, 255, 0.6);
      }

      .copy-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 6px;
        background: rgba(102, 126, 234, 0.2);
        border: 1px solid rgba(102, 126, 234, 0.4);
        border-radius: 6px;
        color: #fff;
        cursor: pointer;
        transition: all 0.2s ease;
        flex-shrink: 0;
      }

      .copy-btn:hover {
        background: rgba(102, 126, 234, 0.3);
        border-color: rgba(102, 126, 234, 0.6);
      }

      .copy-btn.copied {
        background: rgba(34, 197, 94, 0.3);
        border-color: rgba(34, 197, 94, 0.5);
      }

      .copy-btn.copied svg {
        stroke: #22c55e;
      }

      @media (max-width: 768px) {
        .downloads-grid {
          grid-template-columns: 1fr;
          gap: 32px;
        }
      }

      @media (max-width: 968px) {
        .showcase-content {
          grid-template-columns: 1fr;
          gap: 60px;
        }

        .stats-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (max-width: 640px) {
        .hero {
          padding: 80px 20px 60px;
        }

        .feature-grid {
          grid-template-columns: 1fr;
        }

        .stats-grid {
          grid-template-columns: 1fr;
        }

        .cta-group {
          flex-direction: column;
          width: 100%;
        }

        .btn {
          width: 100%;
          justify-content: center;
        }
      }
    </style>
  </head>
  <body>
    <Header />

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <img
          src={compressoLogo.src}
          alt="Compresso Logo"
          class="compresso-logo"
        />
        <span class="badge">‚ú® 100% Free & Open Source</span>
        <h1>
          Compress any videos.<br />
          <span class="gradient-text">Completely private.</span>
        </h1>
        <p>
          CompressO is a completely free, offline, & open-source video
          compression app available for Mac Ô£ø, Windows ‚äû & Linux üêß.
          <br />
          No cloud uploads, no tracking. Just powerful compression that runs entirely
          on your machine.
        </p>
        <div class="cta-group">
          <a href="#downloads" class="btn btn-primary">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Download
          </a>
          <a
            href="https://github.com/codeforreal1/compressO"
            class="btn btn-secondary"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            View on GitHub
          </a>
        </div>
        <div class="hero-image">
          <img src={heroImage.src} alt="CompressO Interface" />
        </div>
      </div>
    </section>

    <div class="section-divider"></div>

    <!-- Features Section -->
    <section class="section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">
            Powerful compression.<br />Zero compromise.
          </h2>
          <p class="section-subtitle">
            CompressO combines industry-leading compression algorithms with a
            focus on privacy and simplicity.
          </p>
        </div>

        <div class="feature-grid">
          <div class="feature-card">
            <div class="feature-icon">üîí</div>
            <h3>100% Offline</h3>
            <p>
              Your videos never leave your device. All compression happens
              locally on your machine, ensuring complete privacy and security.
            </p>
          </div>

          <div class="feature-card">
            <div class="feature-icon">‚ö°</div>
            <h3>Lightning Fast</h3>
            <p>Powered by latest FFmpeg. Compress videos within seconds.</p>
          </div>

          <div class="feature-card">
            <div class="feature-icon">üéØ</div>
            <h3>Smart Compression</h3>
            <p>
              Advanced algorithms maintain visual quality while dramatically
              reducing file size. Perfect for sharing and storage.
            </p>
          </div>

          <div class="feature-card">
            <div class="feature-icon">üé®</div>
            <h3>Simple Interface</h3>
            <p>
              Drag & drop, copy-paste or select videos, compress. No complicated
              settings or technical knowledge required. Just results that work.
            </p>
          </div>

          <div class="feature-card">
            <div class="feature-icon">üåê</div>
            <h3>Universal Format</h3>
            <p>
              Support for all major video formats including MP4, MOV, AVI, and
              more. Export to any format you need.
            </p>
          </div>

          <div class="feature-card">
            <div class="feature-icon">üíé</div>
            <h3>Quality Control</h3>
            <p>
              Fine-tune compression settings to balance file size and quality.
              Preview results before saving.
            </p>
          </div>
        </div>
      </div>
    </section>

    <div class="section-divider"></div>

    <!-- Feature Showcase Section -->
    <section class="section showcase-section">
      <div class="container">
        <div class="showcase-content">
          <div class="showcase-text">
            <span class="section-tag">Powerful Features</span>
            <h2>Packed with everything<br />you need.</h2>
            <p>
              CompressO goes beyond simple compression. It's a comprehensive
              video processing tool designed for power users and casual users
              alike.
            </p>
            <ul class="feature-list feature-list-vertical" id="featureList">
              <li>
                <div class="feature-item-content">
                  <strong>Batch Compression</strong>
                  <span
                    >Process multiple videos at once with smart queue management</span
                  >
                </div>
              </li>
              <li>
                <div class="feature-item-content">
                  <strong>Video Editing</strong>
                  <span
                    >Trim, split, crop, rotate, flip, and zoom videos before
                    compression</span
                  >
                </div>
              </li>
              <li>
                <div class="feature-item-content">
                  <strong>Video Controls</strong>
                  <span
                    >Customize codec, quality, dimensions, resolution, FPS, and
                    output format</span
                  >
                </div>
              </li>
              <li>
                <div class="feature-item-content">
                  <strong>Audio Controls</strong>
                  <span
                    >Adjust codec, volume, channels, bitrate, and select audio
                    tracks</span
                  >
                </div>
              </li>
              <li>
                <div class="feature-item-content">
                  <strong>Clipboard Support</strong>
                  <span
                    >Paste video files or directories directly from clipboard
                    for instant batch processing</span
                  >
                </div>
              </li>
              <li class="feature-hidden">
                <div class="feature-item-content">
                  <strong>Drag & Drop</strong>
                  <span
                    >Drop entire folders containing videos for automatic batch
                    compression</span
                  >
                </div>
              </li>
              <li class="feature-hidden">
                <div class="feature-item-content">
                  <strong>System Integration</strong>
                  <span
                    >Right-click any video in your file manager and "Open with
                    CompressO"</span
                  >
                </div>
              </li>
              <li class="feature-hidden">
                <div class="feature-item-content">
                  <strong>Complete Info</strong>
                  <span
                    >View full video metadata including container, streams,
                    subtitles, and chapters</span
                  >
                </div>
              </li>
              <li class="feature-hidden">
                <div class="feature-item-content">
                  <strong>Copy to Clipboard</strong>
                  <span
                    >Copy compressed videos directly to clipboard for easy
                    pasting</span
                  >
                </div>
              </li>
              <li class="feature-hidden">
                <div class="feature-item-content">
                  <strong>Metadata Editing</strong>
                  <span
                    >Edit title, artist, album, year, genre, description,
                    copyright, and more</span
                  >
                </div>
              </li>
              <li class="feature-hidden">
                <div class="feature-item-content">
                  <strong>Custom Thumbnails</strong>
                  <span
                    >Set custom thumbnails that display as video previews in
                    file managers</span
                  >
                </div>
              </li>
            </ul>
            <button class="show-all-btn" id="showAllBtn"
              >See More Features</button
            >
          </div>
          <div class="showcase-visual">
            <img src={featuresImage.src} alt="CompressO Features" />
          </div>
